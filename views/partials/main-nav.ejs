<header class="main-header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Express.js</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link <%= uri === '/' ? 'active' : '' %>" href="/"
          >Home <span class="sr-only">(current)</span></a
        >
        <a class="nav-item nav-link <%= uri === '/products' ? 'active' : '' %>" href="/products">Products</a>
        <a class="nav-item nav-link <%= uri === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
        <a class="nav-item nav-link <%= uri === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
        <% if (isAdmin) { %>
        <a class="nav-item nav-link <%= uri === '/admin/products' ? 'active' : '' %>" href="/admin/products"
          >Admin Products</a
        >
        <a class="nav-item nav-link <%= uri === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product"
          >Admin add Product</a
        >
        <% } %>
      </div>
    </div>
    <div class="navbar-nav">
      <% if (uri !== '/login') { %> <% if (!isAdmin) { %>
      <a class="nav-item nav-link <%= uri === '/login' ? 'active' : '' %>" href="/login">Login</a>
      <% } %> <% } else { %> <% if (isAdmin) { %>
      <a class="nav-item nav-link <%= uri === '/login' ? 'active' : '' %>" href="/login">Logout</a>
      <% } %> <% } %>
    </div>
  </nav>
</header>
